<div style="text-align:center;">
	<img src="<%= "#{Rails.root}/app/assets/images/clm-logosmall.jpg" %>" /> <br>
	<div style="text-align:center;"><h2><%= @inspection.job_type %> Inspection</h2></div> 
</div>
<table width="100%" height="100%">
	<tr>
		<td style="height:70px; width:50%;padding-right:40px;">
			<h3 style="text-align:center;">Job info</h3>
			<div style"text-align:left;">
				<p>Driver: <%= @driver.full_name %></p>
				<p>City: <%= @inspection.city %></p>
				<p>Postcode: <%= @inspection.postcode %></p>
				<p style="margin-bottom:0em;">Address: <%= @inspection.address_line_1 %></p>
				<p style="margin-left:4em;margin-top:0em;"><%= @inspection.address_line_2 %></p>
				<p>Home name/number: <%= @inspection.home_number %></p>
			</div>
		</td>
		<td style="width:50%;">
			<h3 style="text-align:center;">Vehicle info</h3>
			<p>Order Number: <%= @vehicle.id %></p>
			<p>Reg. Number: <%= @vehicle.registration %></p>
			<p>Make: <%= @vehicle.manufacturer.description %></p>
			<p>Model: <%= @vehicle.model.description %></p>
			<p>Specification: N/A</p>
			<p>Color: <%= @vehicle.color.nil? ? "N/A" : @vehicle.color %></p>
		</td>
	</tr>
</table>
<hr/>
<h3 style="text-align:center;">Damages</h3>
<table width="100%" height="100%">
	<tr>
		<td align="center">
			<div style="position:relative;">
				<img style="width:100%;" src="<%= "#{Rails.root}/public/vehicle_exterior.png" %>" />
				<% @exterior.each_with_index do |ex, index| %>
					<div style="width: 17px;
	                              height: 17px;
	                              -webkit-border-radius: 25px;
	                              -moz-border-radius: 25px;
	                              border-radius: 25px;
	                              background: green;
	                              position:absolute; 
	                              left:<%= ex.x_percent %>%;
	                              top:<%= ex.y_percent %>%;"
	                         ><%= index + 1 %></div>
					
				<% end %>
			</div>
		</td>
		<td align="center">
			<div style="position:relative;">
				<img style="width:100%;" src="<%= "#{Rails.root}/public/vehicle_interior.png" %>" />
				<% @interior.each_with_index do |i, index| %>
					<div style="width: 17px;
	                              height: 17px;
	                              -webkit-border-radius: 25px;
	                              -moz-border-radius: 25px;
	                              border-radius: 25px;
	                              background: green;
	                              position:absolute; 
	                              left:<%= i.x_percent %>%;
	                              top:<%= i.y_percent %>%;"
	                         ><%= index + 1 + @exterior.length %></div>
					
				<% end %>
			</div>
		</td>
	</tr>
</table>
<div style="display:block; clear:both; page-break-after:always;"></div>
<hr/>
<h3 style="text-align:center;">Damages Info</h3>
<table width="100%" height="100%">
	<% @exterior.each_with_index do |ex, index| %>
		<tr>
			<td valign="top" style="width:30%;">
				<div style="width: 18px;
                          height: 18px;
                          -webkit-border-radius: 25px;
                          -moz-border-radius: 25px;
                          border-radius: 25px;
                          background: green;
                          text-align:center;
                          " 
                     ><%= (index + 1).to_s %><p style="display: inline-block; text-align:left;"><%= " Description:  " + ex.description %></p></div>
                     
			</td>
			<td>
				<% ex.damage_items.each do |photo| %>	
					<img style="display: inline; margin: 0 5px;" width="200px" src="<%= "#{Rails.root}/public/damages/#{photo.file_path}" %>" />
				<% end %>
			</td>
		</tr>
	<% end %>
	<% @interior.each_with_index do |inter, index| %>
		<tr style="text-align:center;">
			<td valign="top" style="width:30%;">
				<div style="width: 18px;
                          height: 18px;
                          -webkit-border-radius: 25px;
                          -moz-border-radius: 25px;
                          border-radius: 25px;
                          background: green;
                          text-align:center;" 
                     ><%= index + @exterior.length + 1 %>  <%=	inter.description %></div>
			</td>
			<td>
				<% inter.damage_items.each do |photo| %>	
					<img width="200px" src="<%= "#{Rails.root}/public/damages/#{photo.file_path}" %>" />
				<% end %>
			</td>
		</tr>
	<% end %>
</table>
<hr/>
<div style="text-align:center;margin-top:50px;">
	<h3> Terms image </h3>
	<img  src="<%= "#{Rails.root}/public/inspections/#{@inspection.terms_file_name}" %>">
</div>